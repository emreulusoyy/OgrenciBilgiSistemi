<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Öğrenci Kayıt</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Report Login Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //Meta tag Keywords -->
    <link href="//fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&display=swap" rel="stylesheet">
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/login/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->

    <link rel="stylesheet" href="~/login/css/font-awesome.min.css" type="text/css" media="all">

</head>

<body>

    <!-- form section start -->
    <section class="w3l-hotair-form">
        <h1>Öğrenci Kayıt Ekranı</h1>
        <div class="container">
            <!-- /form -->
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">
                        <h2></h2>
                        <form method="post">
                            <input type="text" class="text"  asp-for="Username" placeholder="Kullanıcı Adı" required="" autofocus>
                            <input type="password" class="password" asp-for="Password" placeholder="Şifre" required="" autofocus>
                            <input type="password" class="password" asp-for="ContifmPassword" placeholder="Şifre Tekrar " required="" autofocus>
                            <div class="form-group">
                                <div class="float-left mr-3 ">
                                    <input type="radio" id="Active" asp-for="Rol" value="True">
                                    <label for="Active">Admin</label>
                                </div>
                                <div>
                                    <input type="radio" id="Pasive" asp-for="Rol" value="False">
                                    <label for="Pasive">Öğrenci</label><br>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <button class="btn" type="submit">Kaydol</button>
                        </form>

                     
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/login/images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
            <!-- //form -->
        </div>
        <!-- copyright-->
        <div class="copyright text-center">
        </div>
        <!-- //copyright-->
    </section>
    <!-- //form section start -->
