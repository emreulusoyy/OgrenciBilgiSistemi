@model List< OBSEntityLayer.NewConcrete.MufredatDersler>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Student/Views/StudentLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müfredat Bilgilerim</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Ders Adı
                                </th>
                                 <th>
                                    Ekle
                                </th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach(var x in Model)
                            {
                                
                            
                            <tr class="table-info">

                                <td>
                                    @x.Dersler.DerslerID
                                </td>
                                <td>
                                 @x.Dersler.Adi
                                </td>
                                     <td>
                                       <a href="" class="btn btn-primary" >Ekle</a>
                                    </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>