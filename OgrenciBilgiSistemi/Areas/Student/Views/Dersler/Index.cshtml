@using OgrenciBilgiSistemi.Models;
@model List<DersDurumModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Student/Views/StudentLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müfredat Bilgilerim</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Ders Kodu
                                </th>
                                <th>
                                    Ders Adı
                                </th>

                                <th>
                                    Ekle
                                </th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var x in Model)
                            {


                                <tr class="table-info">

                                    <td>
                                        @x.DerslerID
                                    </td>
                                    <td>
                                        @x.Kodu
                                    </td>
                                    <td>
                                        @x.Adi
                                    </td>
                                    @if (x.Durum)
                                    {
                                        <td>
                                            <button disabled class="btn btn-primary">Alındı</button>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <form method="post">

                                                <input name="OgrenciID" value="@ViewBag.OgrenciID" hidden>
                                                <input name="DerslerID" value="@x.DerslerID" hidden>
                                                <button type="submit" class="btn btn-primary">Ekle</button>
                                            </form>
                                        </td>
                                    }

                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>