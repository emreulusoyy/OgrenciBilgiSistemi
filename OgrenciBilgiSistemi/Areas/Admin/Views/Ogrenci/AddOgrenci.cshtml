@model OBSEntityLayer.NewConcrete.Ogrenci
@{
    ViewData["Title"] = "AddOgrenci";
    Layout = "~/Areas/Admin/Views/AdminLayout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Öğrenci</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Öğrenciler</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Öğrenci Ekle</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">


    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-12">
                    <h3 class="mb-0">Öğrenci Ekle </h3>
                </div>
            </div>
        </div>
        <div class="card-body">
          <form method="post">
                <div class="form-group">
                    <label>Öğrenci No</label>
                    @Html.TextBoxFor(x => x.OgrenciNo, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Öğrenci Id Tarihi </label>
                    @Html.HiddenFor(x => x.OgrenciID, new { @class = "form-control" })
                </div>
                    <div class="form-group">
                    <label>Kimlik ID Kimlik No</label>
                    @Html.TextBoxFor(x => x.KimlikID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tc Kimlik No</label>
                    @Html.TextBoxFor(x => x.Kimlik.Tc, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Ad</label>
                    @Html.TextBoxFor(x => x.Kimlik.Ad, new { @class = "form-control" })
                </div>
                 <div class="form-group">
                  <label>Soyad</label>
                    @Html.TextBoxFor(x => x.Kimlik.Soyad, new { @class = "form-control" })
                  </div>
                <div class="form-group">
                    <label>Doğum Yeri</label>
                    @Html.TextBoxFor(x => x.Kimlik.DogumYeri, new { @class = "form-control" })
                </div>
                  <div class="form-group">
                    <label>İletişim ID</label>
                    @Html.TextBoxFor(x => x.Kimlik.IletisimID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mufredat ID</label>
                    @Html.TextBoxFor(x => x.MufredatID, new { @class = "form-control" })
                </div>
               <label>Önce İletişim bilgilerini ardından Kimlik bilgilerini doldurunuz.</label>
            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            <button class="btn btn-dark">İptal</button>
            </form>
            
        </div>

               
               
                <!-- Address -->

           

        </div>
    </div>

<!-- Footer -->