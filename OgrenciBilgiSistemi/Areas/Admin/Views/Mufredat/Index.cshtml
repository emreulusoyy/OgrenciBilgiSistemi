@model List<OBSEntityLayer.NewConcrete.Mufredat>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                </div>

            </div>
        </div>
    </div>3
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Müfredat</h3> <br />


                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="budget">ID</th>
                                <th scope="col" class="sort" data-sort="budget">Müfredat Adı</th>
                                
                                <th scope="col" class="sort" width="0%" data-sort="completion">Güncelle</th>
                                <th scope="col" class="sort" width="0%" data-sort="completion">Sil</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var x in Model)
                            {


                                <tr>

                                    <td class="budget">
                                        @x.MufredatID
                                    </td>
                                    <td class="budget">
                                        @x.MufredatAdi
                                    </td>

                                    <td> <a href="~/Admin/Mufredat/EditMufredat/@x.MufredatID" class="btn btn-primary">Güncelle </a> </td>
                                    <td>
                                        <a href="~/Admin/Mufredat/DeleteMufredat/@x.MufredatID" class="btn btn-danger">Sil </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Card footer -->
                <div class="card-footer py-4">
                    <a href="~/Admin/Mufredat/AddMufredat/" class="btn btn-success">Müfredat Ekle</a>

                    <nav aria-label="...">
                        <ul class="pagination justify-content-end mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">
                                    <i class="fas fa-angle-left"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-angle-right"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Dark table -->
    <!-- Footer -->
</div>

